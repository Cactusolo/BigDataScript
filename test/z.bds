#!/usr/bin/env bds

in := "https://arxiv.org/pdf/1506.08452v1.pdf"	# You should read this paper...
out := "http://pcingola.zzz.s3.amazonaws.com/out.pdf"	# Test file in an S3 bucket

# Remove file 
#sys rm -vf $out

# This will download 'fileRemote' to a 'tmp' directory (if 
# not already downloaded).
# Task statement will also automatically replace wherever 
# the remote name appears so the system command (cat) will 
# be executed on a local file
task( out <- in ) {
	sys echo Hello
	sys cat $in > $out
}

