
system = "cluster"
string bamDir = "$ppwd/chipSeq/bam"

for( string bam : bamDir.dirPath(".*\.bam") ) {
    if( bam.endsWith(".sorted.bam") ) {
        print("Soring BAM file : $bam\n")

        string sortedBamPrefix = "zzz" +  bam.dirName() + "zzz"
        string sortedBam = "$sortedBamPrefix.bam"

        print("Soring BAM file : $bam => $sortedBam\n")
    }
}

